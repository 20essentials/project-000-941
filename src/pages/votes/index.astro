---
import { Votes } from '@/components/Votes';
import Layout from '@/layouts/Layout.astro';
import { UserButton } from '@clerk/astro/components';
---

<Layout>
  <Votes client:load>
    <UserButton
      appearance={{
        elements: {
          userButtonAvatarBox: {
            width: '2vmax',
            height: '2vmax',
            borderRadius: '50%',
            overflow: 'hidden'
          },
          avatarImage: {
            width: '100%',
            height: '100%',
            objectFit: 'cover'
          }
        }
      }}
    />
  </Votes>
</Layout>

<style>
  .cl-userButton-root {
    .cl-userButtonBox {
      .cl-avatarBox {
        width: 1.3vmax !important;
        height: 1.3vmax !important;
      }
    }
  }
</style>
